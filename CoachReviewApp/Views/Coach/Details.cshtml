@model CoachReviewApp.Models.Coach
@{
    ViewData["Title"] = Model.Name;
}

<div class="row">
    <div class="col-md-8">
        <h2>@Model.Name</h2>
        <h4 class="text-muted">@Model.Specialization</h4>
        
        <div class="mb-3">
            @for (int i = 1; i <= 5; i++)
            {
                if (i <= Math.Round(Model.AverageRating))
                {
                    <span class="text-warning fs-4">★</span>
                }
                else
                {
                    <span class="text-secondary fs-4">☆</span>
                }
            }
            <span class="ms-2">(@Model.AverageRating.ToString("0.0")) - @Model.TotalReviews reviews</span>
        </div>

        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">About</h5>
                <p>@Model.Bio</p>
                <p><strong>Years of Experience:</strong> @Model.YearsOfExperience</p>
                <p><strong>Location:</strong> @Model.City, @Model.State @Model.ZipCode</p>
                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                {
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                }
            </div>
        </div>

        @if (User.IsInRole("Reviewer"))
        {
            <div class="mb-4">
                <a asp-controller="Review" asp-action="Create" asp-route-coachId="@Model.Id" class="btn btn-success">Write a Review</a>
            </div>
        }
        else if (!User.Identity!.IsAuthenticated)
        {
            <div class="alert alert-info">
                <a asp-controller="Account" asp-action="Login">Login</a> as a reviewer to leave a review.
            </div>
        }

        <h4>Reviews</h4>
        @if (!Model.Reviews.Any())
        {
            <p class="text-muted">No reviews yet. Be the first to review!</p>
        }
        else
        {
            @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h6>@review.User.FirstName @review.User.LastName</h6>
                            <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= review.Rating)
                                {
                                    <span class="text-warning">★</span>
                                }
                                else
                                {
                                    <span class="text-secondary">☆</span>
                                }
                            }
                        </div>
                        <p>@review.Comment</p>
                    </div>
                </div>
            }
        }
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Subscription Plan</h5>
                <h6 class="text-primary">@Model.SubscriptionTier.Name</h6>
                <p>@Model.SubscriptionTier.Description</p>
                <p class="fs-4"><strong>$@Model.SubscriptionTier.Price</strong>/month</p>
                @if (Model.SubscriptionTier.FeaturedListing)
                {
                    <span class="badge bg-warning text-dark">Featured Coach</span>
                }
            </div>
        </div>
    </div>
</div>
