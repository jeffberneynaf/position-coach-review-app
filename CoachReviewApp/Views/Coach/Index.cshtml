@model IEnumerable<CoachReviewApp.Models.Coach>
@{
    ViewData["Title"] = "Find Coaches";
}

<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
        
        <form asp-action="Index" method="get" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" name="zipCode" class="form-control" placeholder="Search by Zip Code" value="@ViewData["ZipCode"]" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                No coaches found. @(ViewData["ZipCode"] != null ? "Try a different zip code." : "")
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var coach in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@coach.Name</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@coach.Specialization</h6>
                                <p class="card-text">@coach.Bio.Substring(0, Math.Min(150, coach.Bio.Length))...</p>
                                <div class="mb-2">
                                    <strong>Location:</strong> @coach.City, @coach.State @coach.ZipCode
                                </div>
                                <div class="mb-2">
                                    <strong>Experience:</strong> @coach.YearsOfExperience years
                                </div>
                                <div class="mb-2">
                                    <strong>Rating:</strong> 
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= Math.Round(coach.AverageRating))
                                        {
                                            <span class="text-warning">★</span>
                                        }
                                        else
                                        {
                                            <span class="text-secondary">☆</span>
                                        }
                                    }
                                    (@coach.AverageRating.ToString("0.0")) - @coach.TotalReviews reviews
                                </div>
                                @if (coach.SubscriptionTier.FeaturedListing)
                                {
                                    <span class="badge bg-warning text-dark">Featured</span>
                                }
                                <span class="badge bg-info">@coach.SubscriptionTier.Name</span>
                            </div>
                            <div class="card-footer">
                                <a asp-action="Details" asp-route-id="@coach.Id" class="btn btn-primary btn-sm">View Profile</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
